<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ALL USERS</title>
    <style>
      table,
      th,
      tr,
      td {
        border: 1px solid black;
      }
    </style>
  </head>
  <body>
    <button>
      <a href="http://localhost:8080/users/new">Create New User</a>
    </button>
    <table>
      <tr>
        <th>ID</th>
        <th>Username</th>
        <th>Email</th>
      </tr>
      <% for(let user of users){ %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.email %></td>
        <td>
          <form method="GET" action="/users/<%=user.id%>/edit">
            <button>Edit Username</button>
          </form>
          <form
            method="POST"
            action="/users/<%= user.id %>?_method=DELETE">
            <button type="submit">Delete</button>
          </form>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
