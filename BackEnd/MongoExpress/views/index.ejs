<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h1>BackChod Chats</h1>
    <form method="GET" action="/chats/new">
      <button>New Chat</button>
    </form>
    <% for(let chat of chats){ %>
    <div class="chat">
      <p>From: <%= chat.from %></p>
      <p>To: <%= chat.to %></p>
      <div class="msg">
        <p>Message: <%= chat.msg %></p>
        <form method="GET" action="/chats/<%=chat._id%>/edit">
          <button class="edit">Edit Chat</button>
        </form>
        <form
          method="POST"
          action="/chats/<%= chat._id %>?_method=DELETE"
          onsubmit="return confirmDelete()"
        >
          <button type="submit" class="delete">Delete</button>
        </form>
      </div>
      <p><%= chat.created_at.toString().split(" ")[4] %></p>
      <p><%= chat.created_at.toString().split(" ").slice(0,4).join(" ") %></p>
    </div>
    <br />
    <% } %>
  </body>
  <script>
    function confirmDelete() {
      return confirm("Are you sure you want to delete this chat?");
    }
  </script>
</html>
